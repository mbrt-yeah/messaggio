{
    "compilerOptions": {
        "alwaysStrict": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "declaration": true,
        "lib": ["dom", "es6"], 
        "module": "commonjs",
        "moduleResolution": "node",
        "noEmitOnError": true,
        "noImplicitAny": true, 
        "noImplicitThis": true,
        "outDir": "./dist",
        "target": "es5",
        "resolveJsonModule": true, 
        "sourceMap": true,
        "strict": true,
        "types": [ "node"],
        "typeRoots": [ "node_modules/@types" ]
    },
    "include": ["./src/index.ts"],
    "exclude": ["node_modules", "perf-tests", "tests"]
}